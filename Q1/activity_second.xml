<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"



    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jobs" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="companies" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="salaries" />
    </com.google.android.material.tabs.TabLayout>

    <ImageView
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:layout_marginLeft="@dimen/cardview_default_radius"
        android:id="@+id/image"
        app:layout_constraintTop_toBottomOf="@id/tab"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/img2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:contentDescription="TODO" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        app:layout_constraintTop_toTopOf="@id/image"
        android:layout_marginStart="@dimen/cardview_default_radius"
        app:layout_constraintLeft_toRightOf="@id/image"
        android:text="Senior Software Engineer-Data"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:layout_marginLeft="@dimen/cardview_default_radius"
        app:layout_constraintLeft_toRightOf="@+id/image"
        android:text="HouseCanaray"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:layout_marginLeft="@dimen/cardview_default_radius"
        app:layout_constraintLeft_toRightOf="@+id/image"
        android:text="SanFrancisco,CA"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text3"
        android:layout_marginRight="@android:dimen/app_icon_size"
        android:text="5d"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text4"
        app:layout_constraintTop_toBottomOf="@id/text3"
        android:layout_marginLeft="@dimen/cardview_default_radius"
        app:layout_constraintLeft_toRightOf="@+id/image"
        android:text="PKR 20,000/-"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text4"
        android:layout_marginStart="@dimen/cardview_default_radius"
        android:id="@+id/button2"
        app:layout_constraintLeft_toRightOf="@+id/image"
        android:text="Apply now"
        />



</androidx.constraintlayout.widget.ConstraintLayout>

